<Window x:Class="GameClient.Views.SinglePlayerGameMaze"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:GameClient.Views"
        mc:Ignorable="d"
        Title="SinglePlayerGameMaze" Loaded="Window_Loaded" Height="600" Width="600">
    <Grid>
        <Button x:Name="restartButton" Content="Restart" HorizontalAlignment="Left" Margin="123,15,0,0" VerticalAlignment="Top" Width="74"/>
        <Button x:Name="solveButton" Content="Solve Maze" HorizontalAlignment="Left" VerticalAlignment="Top" Width="76" Margin="263,15,0,0" Click="solveButton_Click"/>
        <Button x:Name="menuButton" Content="Main Menu" HorizontalAlignment="Left" VerticalAlignment="Top" Width="75" Margin="392,15,0,0" Click="menuButton_Click"/>
        <local:MazeGrid x:Name="MazeBoard" Maze="{Binding VM_Maze}" InitialPosition="{Binding VM_InitialPosition}"
                        DestPosition="{Binding VM_DestPosition}" PlayerPosition="{Binding VM_PlayerPosition}" Focusable="True"
                        Rows="VM_Rows" Cols="VM_Cols" HorizontalAlignment="Left" Height="400" 
                        Margin="96,122,0,0" VerticalAlignment="Top" Width="400"/>

    </Grid>
</Window>
