<Window x:Class="GameClient.Views.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:GameClient.Views"
        mc:Ignorable="d"
        Title="MainWindow" Height="350" Width="525">
    <Grid>
        <Button x:Name="singlePlayer" Content="Single player" HorizontalAlignment="Left" Margin="208,149,0,0" VerticalAlignment="Top" Width="75" Click="singlePlayer_Click"/>
        <Button x:Name="multiPlayer" Content="Multi player" HorizontalAlignment="Left" Margin="208,196,0,0" VerticalAlignment="Top" Width="75" Click="multiPlayer_Click"/>
        <Button x:Name="settings" Content="Settings" HorizontalAlignment="Left" Margin="208,239,0,0" VerticalAlignment="Top" Width="75" Click="settings_Click"/>
        <Image x:Name="image" Source="../images/maze.jpg" HorizontalAlignment="Left" Height="100" Margin="198,44,0,0" VerticalAlignment="Top" Width="100"/>

    </Grid>
</Window>
